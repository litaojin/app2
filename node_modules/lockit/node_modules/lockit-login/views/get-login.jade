extend /layout

block content
  div.row
    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading 帐户登陆
        div.panel-body
          form(action=action, method="POST", autocomplete="off")
            input(type="hidden", name="_csrf", value=_csrf)
            div.form-group
              label(for="login") 用户名/手机号码
              input.form-control(type="text", id="login", name="login", placeholder="用户名或手机号码", value=login)
            div.form-group
              label(for="password") 密码
              input.form-control(type="password", id="password", name="password", placeholder="请输入密码")
            if error
              div.alert.alert-warning #{error}
            input(type="submit", class="btn btn-primary btn-block", value="登陆")
          div.text-center(style="margin-top: 15px;")
            small: a(href="/forgot-password") 忘记密码?
