extend /layout

block content
  div.row
    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading 创建新用户
        div.panel-body
          form(action="/signup", method="POST", autocomplete="off")
            input(type="hidden", name="_csrf", value=_csrf)
            div.form-group
              label(for="name")  帐户名
              input.form-control(type="text", id="name", name="name", value=name, placeholder="请设置一个账号名")
            div.form-group
              label(for="mobile") 手机号码
              input.form-control(type="mobile", id="mobile", name="mobile", value=mobile, placeholder="手机号码")
            div.form-group
              label(for="password") 密码
              input.form-control(type="password", id="password", name="password", placeholder="设置一个密码")
            div.form-group
              label(for="password1") 确认密码
              input.form-control(type="password", id="password1", name="password1", placeholder="重复输入一遍密码")
            if error
              div.alert.alert-warning #{error}
            input(type="submit", class="btn btn-primary btn-block", value="注册用户")
          div.text-center(style="margin-top: 15px;")
